enum Currency {
  XAF
  USD
}

generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// Merchant/User Model
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  firstName    String
  lastName     String
  password     String
  phoneNumber  String
  businessName String
  supportEmail String?
  role         Role     @default(MERCHANT)
  restricted   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  products Product[] // Merchant can have multiple products

  @@map("users")
}

// Product Model
model Product {
  id          String   @id @default(uuid())
  merchantId  String 
  image       String 
  title       String
  description String? 
  price       Decimal  @db.Decimal(10, 2) 
  currency    Currency @default(XAF) 
  quantity    Int? 
  email       String? 
  paymentLink String? 
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  merchant User      @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([merchantId])
  @@index([isActive])
  @@index([createdAt])
  @@map("products")
}

// Payment/Transaction Model
model Payment {
  id                  String   @id @default(uuid())
  token               String? 
  productId           String? 
  customerName        String? 
  customerEmail       String? 
  customerPhoneNumber String? 
  quantity            Int? 
  amount              Decimal? @db.Decimal(10, 2) 
  status              String?
  externalReference   String? // Internal payment ID/reference
  momoReference       String? // Transaction reference from MoMo API
  currencyCode        String?  @default("XAF") 
  countryCode         String?  @default("CM") 
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  product Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  receipt Receipt?

  @@index([productId])
  @@index([status])
  @@index([momoReference])
  @@index([externalReference])
  @@index([createdAt])
  @@map("payments")
}

// Receipt Model
model Receipt {
  id         String   @id @default(uuid())
  paymentId  String   @unique
  receiptUrl String? // URL to the receipt PDF stored in Cloudinary
  createdAt  DateTime @default(now())

  // Relations
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@map("receipts")
}
